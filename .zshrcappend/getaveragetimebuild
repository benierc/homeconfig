
function kojif {
	koji --quiet -c ~/.kojif/config-clement $@
}

function getaveragetimebuild {
	count=0
	ti=0

	for build in $(kojif list-builds --package=helloworld-binding --state=COMPLETE | awk '{print $1}'); do
		buildinfo=$(kojif buildinfo $build)
		if ! echo $buildinfo | grep aarch64 &> /dev/null; then
			continue
		fi

		taskid=$(kojif buildinfo $build | grep Task | awk '{print $2}')
		if [ "$taskid" == "none" ]; then
			continue
		fi
		completiontime=$(kojif call getTaskInfo $taskid | grep completion_ts | awk '{print $2}')
		completiontime=$(echo $completiontime | sed "s/\..*$//")
		createtime=$(kojif call getTaskInfo $taskid | grep create_ts | awk '{print $2}')
		createtime=$(echo $createtime | sed "s/\..*$//")
		count=$((count + 1))
		echo "$count---$build---:taskid=$taskid-ts=$completiontime"
		ti=$(($ti + $completiontime -$createtime))
	done

	echo "RES=$(($ti/$count/60))"
}
